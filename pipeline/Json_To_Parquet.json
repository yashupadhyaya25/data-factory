{
	"name": "Json_To_Parquet",
	"properties": {
		"activities": [
			{
				"name": "Json To Parquet",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "FlattenHierarchy"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['returnReference']"
								},
								"sink": {
									"name": "returnReference"
								}
							},
							{
								"source": {
									"path": "$['orderReference']"
								},
								"sink": {
									"name": "orderReference"
								}
							},
							{
								"source": {
									"path": "$['customerId']"
								},
								"sink": {
									"name": "customerId"
								}
							},
							{
								"source": {
									"path": "$['items'][0]['variantId']"
								},
								"sink": {
									"name": "variantId"
								}
							},
							{
								"source": {
									"path": "$['items'][0]['quantity']"
								},
								"sink": {
									"name": "quantity"
								}
							},
							{
								"source": {
									"path": "$['items'][0]['returnReason']['code']"
								},
								"sink": {
									"name": "code"
								}
							},
							{
								"source": {
									"path": "$['items'][0]['returnReason']['notes']"
								},
								"sink": {
									"name": "notes"
								}
							},
							{
								"source": {
									"path": "$['timestamp']"
								},
								"sink": {
									"name": "timestamp"
								}
							}
						],
						"collectionReference": "",
						"mapComplexValuesToString": false
					}
				},
				"inputs": [
					{
						"referenceName": "BLOB_JSON",
						"type": "DatasetReference",
						"parameters": {
							"container": "json",
							"folder_path": " ",
							"file_name": "nested.json"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "BLOB_PARQUET",
						"type": "DatasetReference",
						"parameters": {
							"container": "sales",
							"folder_path": "flatten_json",
							"file_name": "flatten_json.parquet"
						}
					}
				]
			}
		],
		"annotations": []
	}
}
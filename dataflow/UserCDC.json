{
	"name": "UserCDC",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "BLOB_CSV",
						"type": "DatasetReference"
					},
					"name": "SilverLayer"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "BLOB_PARQUET",
						"type": "DatasetReference"
					},
					"name": "GoldLayer"
				}
			],
			"transformations": [
				{
					"name": "PIIimplementation"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: false,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     enableCdc: true,",
				"     mode: 'read',",
				"     skipInitialLoad: false,",
				"     wildcardPaths:['*']) ~> SilverLayer",
				"SilverLayer derive(password = sha2(256, password),",
				"          etl_load_date = currentUTC(),",
				"          source = 'FAKESTORE') ~> PIIimplementation",
				"PIIimplementation sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> GoldLayer"
			]
		}
	}
}